                                                                   Source="{Binding car_image}"
                                                                   Stretch="Fill" />
                                                        </Border>
                                                        <StackPanel Grid.Column="1"
                                                                    Margin="12 0 0 0"
                                                                    Orientation="Vertical">
                                                            <TextBlock FontSize="20"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="Black"
                                                                       Text="{Binding brand_name}"
                                                                       TextWrapping="Wrap" />
                                                            <TextBlock FontSize="20"
                                                                       Foreground="#5d7e8a"
                                                                       Text="{Binding car_price}"
                                                                       TextWrapping="Wrap" />

                                                        </StackPanel>
                                                    </Grid>

                                                </StackPanel>
                                            </Grid>
                                            <Rectangle Height="1" Fill="Black" />
                                        </StackPanel>

                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                        </StackPanel>
                    </ScrollViewer>
                </phone:PivotItem>
            </phone:Pivot>
        </Grid>
        <Grid x:Name="progress_bar"
              Background="#7F000000"
              Visibility="Collapsed">
            <telerikPrimitives:RadBusyIndicator x:Name="loading"
                                                AnimationStyle="AnimationStyle6"
                                                Content="Please wait..."
                                                FontSize="25"
                                                Foreground="White"
                                                IsRunning="True" />
        </Grid>
    </Grid>
</UserControl>