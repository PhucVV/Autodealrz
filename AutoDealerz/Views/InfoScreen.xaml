                                    </DataTemplate>
                                </toolkit:ListPicker.FullModeItemTemplate>
                            </toolkit:ListPicker>
                        </Grid>
                    </Border>

                    <TextBlock Margin="0 12 0 0"
                               FontSize="20"
                               Foreground="White"
                               Text="Model Year:" />
                    <Border Background="#FFB3C7CE"
                            BorderBrush="#7F000000"
                            BorderThickness="1"
                            CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                    Background="#a0b5bd"
                                    CornerRadius="5 0 0 5">
                                <Image Width="30"
                                       Height="30"
                                       Margin="12"
                                       Source="/Images/model_year_icon.png" />
                            </Border>
                            <TextBox x:Name="TB_year"
                                     Grid.Column="1"
                                     InputScope="Number"
                                     KeyDown="TB_year_KeyDown"
                                     Style="{StaticResource TB_Style_InfoScreen}" />
                        </Grid>
                    </Border>
                    <TextBlock Margin="0 12 0 0"
                               FontSize="20"
                               Foreground="White"
                               Text="Vin No.:" />
                    <Border Background="#FFB3C7CE"
                            BorderBrush="#7F000000"
                            BorderThickness="1"
                            CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                    Background="#a0b5bd"
                                    CornerRadius="5 0 0 5">
                                <Image Width="30"
                                       Height="30"
                                       Margin="12"
                                       Source="/Images/vin_no.png" />
                            </Border>
                            <TextBox x:Name="TB_vin_no"
                                     Grid.Column="1"
                                     KeyDown="TB_vin_no_KeyDown"
                                     Style="{StaticResource TB_Style_InfoScreen}" />
                        </Grid>
                    </Border>


                    <Button x:Name="BT_save"
                            Margin="0 50 0 0"
                            Background="#5d7e8a"
                            Click="BT_save_Click"
                            Content="Save"
                            FontSize="25"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle_blue}" />
                </StackPanel>
            </ScrollViewer>

        </Grid>
        <Grid x:Name="progress_bar"
              Background="#7F000000"
              Visibility="Collapsed">
            <telerikPrimitives:RadBusyIndicator x:Name="loading"
                                                AnimationStyle="AnimationStyle6"
                                                Content="Please wait..."
                                                FontSize="25"
                                                Foreground="White"
                                                IsRunning="True" />
        </Grid>
    </Grid>

</phone:PhoneApplicationPage>