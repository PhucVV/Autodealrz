                                     KeyDown="TB_pincode_KeyDown"
                                     Style="{StaticResource TB_Style_InfoScreen}" />
                        </Grid>
                    </Border>

                    <Button x:Name="BT_next"
                            Margin="0 50 0 0"
                            Background="#5d7e8a"
                            Click="BT_next_Click"
                            Content="Next"
                            FontSize="25"
                            Foreground="White"
                            Style="{StaticResource ButtonStyle_blue}" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
